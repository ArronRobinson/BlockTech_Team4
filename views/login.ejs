<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MatchCast Login</title>
    <link rel="stylesheet" href="/register.css">
    <link rel="stylesheet" href="/all.css">
</head>
<body>
    <main>
        <form action="/login" method="POST">
            <div class="shadowForm">
                <img src="/images/podcast-listener.png" alt="">
                <fieldset>
                    <section>
                        <legend>Welkom, login</legend>
                        <div>
                            <label for="naam">Gebruikersnaam:</label>
                            <input type="text" name="username" id="naam">
                        </div>
                        <div>
                            <label for="wachtwoord">Wachtwoord:</label>
                            <div class="password-field">
                                <input type="password" name="password" id="wachtwoord">
                                <span class="toggle-password">üëÅÔ∏è</span>
                            </div>
                        </div>
                    </section>
                    <div class="rememberMe">
                        <label>
                            <input type="checkbox" name="remember" id="remember"> Onthoud mijn gegevens
                        </label>
                    </div>
                    <p>Wachtwoord <a href="">vergeten?</a></p>
                    <p>Nog geen account? <a href="/signup">Register</a></p>
                    <button>Login</button>
                </fieldset>
            </div>
        </form>
        <section>
            <div class="circle"></div>
            <div class="circleTwo"></div>
        </section>
    </main>
    <script>
        window.addEventListener("load", function () {
            // Add a check to see if the element exists first
            const loadingScreen = document.querySelector(".loading-screen");
            if (loadingScreen) {
                loadingScreen.style.display = "none";
            }
        });
    
        document.querySelector(".toggle-password").addEventListener("click", function () {
            let wachtwoordInput = document.getElementById("wachtwoord");
    
            // Toggle password visibilityz
            if (wachtwoordInput.type === "password") {
                wachtwoordInput.type = "text";
            } else {
                wachtwoordInput.type = "password";
            }
        });
    </script>
    <script src="/script/frontend.js"></script>
</body>
</html>