                        <label><input type="checkbox" name="interests" value="Modern History"> Moderne Geschiedenis & Koude Oorlog</label>
                        <label><input type="checkbox" name="interests" value="Historical Biographies"> Historische Biografieën</label>
                        <label><input type="checkbox" name="interests" value="Archaeology"> Archeologie & Lost Civilizations</label>
                    </div>
                </article>
                
                <!-- Lifestyle Options -->
                <article class="subcategory-group lifestyleOpties" style="display: none;">
                    <h2>Lifestyle</h2>
                    <div class="checkbox-grid">
                        <label><input type="checkbox" name="interests" value="Urban Lifestyle"> Urban lifestyle</label>
                        <label><input type="checkbox" name="interests" value="Spiritual Lifestyle"> Spirituele levensstijl</label>
                        <label><input type="checkbox" name="interests" value="Digital Nomad"> Digitale nomaden levensstijl</label>
                        <label><input type="checkbox" name="interests" value="Luxury Lifestyle"> Luxueuze levensstijl</label>
                        <label><input type="checkbox" name="interests" value="Sustainable Lifestyle"> Duurzame levensstijl</label>
                        <label><input type="checkbox" name="interests" value="Minimalist Lifestyle"> Minimalistische levensstijl</label>
                        <label><input type="checkbox" name="interests" value="Healthy Lifestyle"> Gezonde levensstijl</label>
                    </div>
                </article>
                
                <!-- Fashion Options -->
                <article class="subcategory-group modeOpties" style="display: none;">
                    <h2>Mode</h2>
                    <div class="checkbox-grid">
                        <label><input type="checkbox" name="interests" value="Casual Fashion"> Casual</label>
