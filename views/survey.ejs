                        <label><input type="checkbox" name="interests" value="Story-driven Games"> Story</label>
                    </div>
                </article>
                
                <!-- Film Options -->
                <article class="subcategory-group filmOpties" style="display: none;">
                    <h2>Film</h2>
                    <div class="checkbox-grid">
                        <label><input type="checkbox" name="interests" value="Action Films"> Action</label>
                        <label><input type="checkbox" name="interests" value="Fantasy Films"> Fantasie</label>
                        <label><input type="checkbox" name="interests" value="Horror Films"> Horror</label>
                        <label><input type="checkbox" name="interests" value="Drama Films"> Drama</label>
                        <label><input type="checkbox" name="interests" value="Comedy Films"> Komedie</label>
                        <label><input type="checkbox" name="interests" value="Sci-Fi Films"> Science Fiction</label>
                        <label><input type="checkbox" name="interests" value="Romance Films"> Romantiek</label>
                    </div>
                </article>
                
                <!-- Music Options -->
                <article class="subcategory-group muziekOpties" style="display: none;">
                    <h2>Muziek</h2>
                    <div class="checkbox-grid">
                        <label><input type="checkbox" name="interests" value="Jazz Music"> Jazz</label>
                        <label><input type="checkbox" name="interests" value="Hip-hop Music"> Hip-hop</label>
                        <label><input type="checkbox" name="interests" value="Rock Music"> Rock</label>
                        <label><input type="checkbox" name="interests" value="R&B Music"> R&B</label>
                        <label><input type="checkbox" name="interests" value="Soul Music"> Soul</label>
                        <label><input type="checkbox" name="interests" value="Singers"> Sing</label>
                        <label><input type="checkbox" name="interests" value="K-Pop Music"> K-Pop</label>
                    </div>
                </article>
                
                <!-- Sport Options -->
                <article class="subcategory-group sportOpties" style="display: none;">
                    <h2>Sport</h2>
                    <div class="checkbox-grid">
                        <label><input type="checkbox" name="interests" value="Basketball"> Basketbal</label>
                        <label><input type="checkbox" name="interests" value="Football/Soccer"> Voetbal</label>
                        <label><input type="checkbox" name="interests" value="Hockey"> Hockey</label>
                        <label><input type="checkbox" name="interests" value="Rugby"> Rugby</label>
                        <label><input type="checkbox" name="interests" value="Tennis"> Tennis</label>
